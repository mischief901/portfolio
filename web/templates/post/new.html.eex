<h4> Test Form for Posts </h4>

<%= form_for @changeset, post_path(@conn, :create), fn f -> %>
  <div class="form-group">
    <%= text_input f, :title, placeholder: "Title", class: "form-control" %>
    <%= error_tag f, :title %>
  </div>
  <div>
    <%= textarea f, :content, placeholder: "Body", class: "form-control" %>
  </div>

  <%= submit "Add Topic", class: "btn btn-primary" %>
<% end %>